<% provide(:title, 'All users') %>
<h1>All users</h1>
<ul class="users">
  <% @users.each do |user| %>
    <li><%= link_to user.name, user %></li>
    <% if current_user.admin? && !current_user?(user) %>
    <%= button_to "delete this user", user_path(user), method: :delete %>
<% end %>

  <% end %>
</ul>
