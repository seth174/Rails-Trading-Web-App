
	<div class="row">
  	<div class="col-md-6 col-md-offset-3 mx-auto">
   	 <%= form_with(model: @user, local:  true) do |f|  %>
     	 <%= f.label   :name %>
      	<%= f.text_field  :name, class: 'form-control my-3'  %>

      	<%= f.label    :email %>
      	<%= f.email_field  :email, class: 'form-control my-3' %>

      	<%= f.label    :password %>
      	<%= f.password_field  :password, class: 'form-control my-3' %>

      	<%= f.label    :password_confirmation, "Confirmation" %>
      	<%= f.password_field   :password_confirmation, class: 'form-control my-3'  %>

      	<%= f.submit yield(:button_text), class: "btn btn-primary my-3" %>
    	<% end %>
  	</div>
	</div>
