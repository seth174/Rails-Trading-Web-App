<% provide(:title, 'Withdraws') %>
<% provide(:url, 'index')%>
<h1 class="display-5 text-center">Withdraws</h1>

<%= render 'withdraws/deposit_or_withdraw_table', withdrawsOrDeposits: @withdraws%>

<%= form_with(url: 'index', method: :get, local: true) do |form| %>
    <div class="mx-auto">

      <div class="d-flex flex-row bd-highlight col-auto">
          <div class="p-2 bd-highlight align-self-center"><%= form.label :order, 'Order By Date'%> </div>
          <div class="p-2 bd-highlight align-self-center"> <%= form.select :date, @date%></div>
      </div>

      <div class="d-flex flex-row bd-highlight">
        <div class="p-2 bd-highlight align-self-center"><%= form.label :order2, 'Order By Amount'%> </div>
        <div class="p-2 bd-highlight align-self-center"><%= form.select :size, @numeric%> </div>
        <div class="p-2 bd-highlight align-self-center"><%= form.number_field  :amount, step: 0.01, class: 'form-control'  %></div>
      </div>
    </div>
    <%= form.submit "Sort", class: 'btn btn-primary btn-lg mx-3' %>
<% end%>
